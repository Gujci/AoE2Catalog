<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.civilizations.CivilizationDetail">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/expansionLabel"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:layout_width="0dp"/>

    <TextView
            android:id="@+id/expansionLabel"
            android:text="@string/expansion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/expansion"
            style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
            android:layout_margin="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="32dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/expansion"
            app:layout_constraintTop_toBottomOf="@id/expansionLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bonusesLabel"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:layout_width="0dp"/>

    <TextView
            android:id="@+id/bonusesLabel"
            android:text="@string/bonuses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/expansion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bonuses"
            style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
            android:layout_margin="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="32dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bonuses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bonusesLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/teamBonusLabel"
            android:layout_margin="16dp"/>

    <TextView
            android:id="@+id/teamBonusLabel"
            android:text="@string/team_bonus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bonuses"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/teamBonus"
            style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
            android:layout_margin="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="32dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/teamBonus"
            app:layout_constraintTop_toBottomOf="@id/teamBonusLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="32dp"
            android:layout_height="0dp"
            android:layout_width="0dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>